# Intel MPI 5.x and higher (implements MPI-3)

MPICC=mpiicc -cc={CC}
MPICXX=mpiicpc -cxx={CXX}
MPIF77=mpif77 -f77={F77}
MPIFC=mpif90 -fc={FC}

MPI_CPPFLAGS=-DMPICH_SKIP_MPICXX
MPI_CFLAGS=-g -O2
MPI_CXXFLAGS=-g -O2
MPI_FFLAGS=-g -O2
MPI_FCFLAGS=-g -O2
#MPI_LDFLAGS=
#MPI_LIBS=
MPILIB_LDFLAGS=-Wc,-nolinkage

