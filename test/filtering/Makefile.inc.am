check_PROGRAMS += filter_test

filter_test_SOURCES = \
    $(SRC_ROOT)test/filtering/filter_test.c   \
    $(SRC_ROOT)test/filtering/filtered_file.c \
    $(SRC_ROOT)test/filtering/not_filtered.c

filter_test_CPPFLAGS = $(AM_CPPFLAGS)                      \
                       @COMPILER_INSTRUMENTATION_CPPFLAGS@ \
                       -I$(PUBLIC_INC_DIR)                 \
                       $(UTILS_CPPFLAGS)                   \
                       -DSCOREP_USER_ENABLE

filter_test_LDADD    = $(LIB_ROOT)libscorep_serial.la

filter_test_LDFLAGS  = @SCOREP_PAPI_LDFLAGS@ @CUDA_LDFLAGS@ @COMPILER_INSTRUMENTATION_LDFLAGS@

check_PROGRAMS += filter_f_test

filter_f_test_SOURCES = $(SRC_ROOT)test/filtering/filter_test.F90
filter_f_test_CPPFLAGS = @COMPILER_INSTRUMENTATION_CPPFLAGS@
filter_f_test_LDADD    = $(LIB_ROOT)libscorep_serial.la

filter_f_test_LDFLAGS  = @SCOREP_PAPI_LDFLAGS@ @CUDA_LDFLAGS@ @COMPILER_INSTRUMENTATION_LDFLAGS@

TESTS_SERIAL += ./../test/filtering/run_filter_test.sh

# Unfortunately, the PGI compiler does not give mangled fortran symbols to the 
# system but only partially mangled. Thus, the fortran comparisons fail.
if !SCOREP_COMPILER_PGI 
TESTS_SERIAL += ./../test/filtering/run_filter_f_test.sh
endif

EXTRA_DIST += \
     $(SRC_ROOT)test/filtering/filter.cfg            \
     $(SRC_ROOT)test/filtering/filter_f.cfg          \
     $(SRC_ROOT)test/filtering/run_filter_test.sh.in \
     $(SRC_ROOT)test/filtering/run_filter_f_test.sh.in
