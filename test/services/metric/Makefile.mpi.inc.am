## MPI + OpenMP C

if OPENMP_SUPPORTED

noinst_LTLIBRARIES                          += libjacobi_mpi_pomp_c_metric_test.la
libjacobi_mpi_pomp_c_metric_test_la_SOURCES  = $(SRC_ROOT)test/services/metric/data/jacobi/hybrid/C/pomp.c
libjacobi_mpi_pomp_c_metric_test_la_CPPFLAGS = $(AM_CPPFLAGS)

check_PROGRAMS                       += jacobi_mpi_omp_c_metric_test
jacobi_mpi_omp_c_metric_test_SOURCES  = $(SRC_ROOT)test/services/metric/data/jacobi/hybrid/C/jacobi.mod.c       \
										$(SRC_ROOT)test/services/metric/data/jacobi/hybrid/C/jacobi.c.opari.inc \
										$(SRC_ROOT)test/services/metric/data/jacobi/hybrid/C/jacobi.h           \
										$(SRC_ROOT)test/services/metric/data/jacobi/hybrid/C/main.mod.c         \
										$(SRC_ROOT)test/services/metric/data/jacobi/hybrid/C/main.c.opari.inc
jacobi_mpi_omp_c_metric_test_CFLAGS   = $(AM_CFLAGS) $(OPENMP_CFLAGS)
jacobi_mpi_omp_c_metric_test_CPPFLAGS = $(AM_CPPFLAGS) -I$(PUBLIC_INC_DIR)/scorep @COMPILER_INSTRUMENTATION_CPPFLAGS@

# TODO: -finstrument-functions-exclude-file-list is a quick fix for the problem of recorded enter/leave events of
# printf statements, REMOVE this flag after this bug is fixed properly
if SCOREP_COMPILER_GNU
jacobi_mpi_omp_c_metric_test_CPPFLAGS += -finstrument-functions-exclude-file-list=/usr/include
endif

# for some unknown reason we need an extra -I for the SUN compiler in
# OpenMP and hybrid mode.
if SCOREP_COMPILER_SUN
jacobi_mpi_omp_c_metric_test_CPPFLAGS += -I$(INC_ROOT)test/jacobi/OpenMP/C
endif

jacobi_mpi_omp_c_metric_test_LDADD    = $(LIB_DIR_SCOREP)libscorep_mpi_omp.la libjacobi_mpi_pomp_c.la

# for some unknown reason we need an extra -I for the SUN compiler in
# OpenMP and hybrid mode.
if SCOREP_COMPILER_SUN
jacobi_mpi_omp_c_metric_test_CPPFLAGS += -I$(INC_ROOT)test/services/metric/data/jacobi/hybrid/C
endif


EXTRA_DIST += $(SRC_ROOT)test/services/metric/run_rusage_hybrid_metric_test.sh \
              $(SRC_ROOT)test/services/metric/data/jacobi_c_hybrid_rusage_metric_definitions.out \
              $(SRC_ROOT)test/services/metric/data/jacobi_c_hybrid_rusage_metric_events.out
EXTRA_DIST += $(SRC_ROOT)test/services/metric/run_papi_hybrid_metric_test.sh \
              $(SRC_ROOT)test/services/metric/data/jacobi_c_hybrid_papi_metric_definitions.out \
              $(SRC_ROOT)test/services/metric/data/jacobi_c_hybrid_papi_metric_events.out

if HAVE_PAPI
jacobi_mpi_omp_c_metric_test_LDFLAGS  = $(SCOREP_PAPI_LDFLAGS) $(SCOREP_PAPI_LIBS) -R$(SCOREP_PAPI_LIBDIR)
endif

# As long as there is no appropriate make target add binary to MPI test 
