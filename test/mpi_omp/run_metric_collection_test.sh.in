cd ../build-backend
make scorep-config-tool-local
cd ../build-mpi

RESULT_DIR=scorep-metric-collection-test-dir
rm -rf $RESULT_DIR

#-------------------------------------------------------------
#                                       Metric collection test
#-------------------------------------------------------------
# build test
cp  @abs_srcdir@/mpi_omp_metric_collection_test.c mpi_omp_metric_collection_test.c
touch config.h

@SCOREP_COMPILER_SUN_FALSE@extra_flag=""
@SCOREP_COMPILER_SUN_TRUE@extra_flag="--nocompiler"

../build-backend/scorep --user --verbosity=1 --config=../build-backend/scorep_config.dat $extra_flag @CC@ -I. @OPENMP_CFLAGS@ mpi_omp_metric_collection_test.c -o metric_collection_test

rm -f config.h mpi_omp_metric_collection_test.opari.c mpi_omp_metric_collection_test.c.opari.inc mpi_omp_metric_collection_test.c metric_collection_test.pomp_init.c metric_collection_test.pomp_init.o

if [ ! -e metric_collection_test ]; then
    exit 1
fi

SCOREP_EXPERIMENT_DIRECTORY=$RESULT_DIR SCOREP_ENABLE_PROFILING=true SCOREP_ENABLE_TRACING=false mpiexec -np 4 ./metric_collection_test

if [ $? -ne 0 ]; then
    rm -rf scorep-measurement-tmp metric_collection_test
    exit 1
fi

rm -rf metric_collection_test $RESULT_DIR

exit 0;
