if MPI_SUPPORTED
if OPENMP_SUPPORTED

check_PROGRAMS += mpi_omp_hello_world_uninstrumented

mpi_omp_hello_world_uninstrumented_SOURCES  = $(SRC_ROOT)/test/mpi_omp/mpi_omp_hello_world.c
mpi_omp_hello_world_uninstrumented_CFLAGS   = $(AM_CFLAGS) $(OPENMP_CFLAGS)
mpi_omp_hello_world_uninstrumented_CPPFLAGS = $(AM_CPPFLAGS)


noinst_LTLIBRARIES                     += libmpi_omp_hello_world_pomp.la
libmpi_omp_hello_world_pomp_la_SOURCES  = $(SRC_ROOT)/test/mpi_omp/pomp.c
libmpi_omp_hello_world_pomp_la_CPPFLAGS = $(AM_CPPFLAGS)

check_PROGRAMS += mpi_omp_hello_world

mpi_omp_hello_world_SOURCES  = $(SRC_ROOT)/test/mpi_omp/mpi_omp_hello_world.mod.c      \
                               $(SRC_ROOT)/test/mpi_omp/mpi_omp_hello_world.c.opari.inc
mpi_omp_hello_world_CFLAGS   = $(AM_CFLAGS) $(OPENMP_CFLAGS)
mpi_omp_hello_world_CPPFLAGS = $(AM_CPPFLAGS) -I$(INC_DIR_OPARI2)/opari2 @COMPILER_INSTRUMENTATION_CPPFLAGS@
mpi_omp_hello_world_LDADD    = $(LIB_DIR_SCOREP)libscorep_mpi_omp.la libmpi_omp_hello_world_pomp.la

if HAVE_PAPI
mpi_omp_hello_world_LDFLAGS  = $(SCOREP_PAPI_LDFLAGS) $(SCOREP_PAPI_LIBS) -Wl,-rpath,$(SCOREP_PAPI_LIBDIR)
endif

TESTS_MPI_OMP += mpi_omp_hello_world

endif
endif

