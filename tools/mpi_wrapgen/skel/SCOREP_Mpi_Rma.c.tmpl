  {
    SCOREP_ExitRegion(scorep_mpi_regions[SCOREP_MPI_REGION__MPI_WIN_CREATE]);
    SCOREP_MPI_EVENT_GEN_ON();
  }
  SCOREP_IN_MEASUREMENT_DECREMENT();

