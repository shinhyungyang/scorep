<tool name="ScoreP-TAU">
    <compile>
        <allcompilers command="scorep" group="scorep"/>
    </compile>
    <execute>
        <global name="SCORPEnvironment">
            <!-- envvar flag="SCOREP_PROFILING_FORMAT" value="TAU_SNAPSHOT"/ -->
        </global>
    </execute>
    <analyze foralllike="profile.cubex" depth="1">
