noinst_LTLIBRARIES += libscorep_platform.la
libscorep_platform_la_SOURCES = $(SRC_ROOT)src/services/include/SCOREP_Platform.h
libscorep_platform_la_CPPFLAGS = $(AM_CPPFLAGS) \
                                 $(UTILS_CPPFLAGS) \
                                 -I$(INC_ROOT)src/services/include

libscorep_platform_la_SOURCES += \
    $(SRC_ROOT)src/services/platform/scorep_platform_system_tree.c \
    $(SRC_ROOT)src/services/platform/scorep_platform_system_tree.h

if PLATFORM_BGP
libscorep_platform_la_SOURCES += $(SRC_ROOT)src/services/platform/scorep_platform_bgp.c
libscorep_platform_la_CPPFLAGS += -I/bgsys/drivers/ppcfloor/arch/include
endif

if PLATFORM_BGQ
libscorep_platform_la_SOURCES += $(SRC_ROOT)src/services/platform/scorep_platform_bgq.c
libscorep_platform_la_LDFLAGS = $(AM_LDFLAGS) -L/bgsys/drivers/ppcfloor/comm/sys-fast/lib -lpami -lstdc++ -L/bgsys/drivers/V1R1M2/ppc64/spi/lib -lSPI -lSPI_cnk -lrt
libscorep_platform_la_CPPFLAGS += -I/bgsys/drivers/ppcfloor/comm/sys/include -I/bgsys/drivers/ppcfloor/comm/sys-fast/include

endif

# for any platform not handled above, use the dummy platform
# currently unhandled platforms:
if PLATFORM_ALTIX
libscorep_platform_la_SOURCES += $(SRC_ROOT)src/services/platform/scorep_platform_dummy.c
endif

if PLATFORM_AIX
libscorep_platform_la_SOURCES += $(SRC_ROOT)src/services/platform/scorep_platform_dummy.c
endif

if PLATFORM_BGL
libscorep_platform_la_SOURCES += $(SRC_ROOT)src/services/platform/scorep_platform_dummy.c
endif

if PLATFORM_CRAYXT
