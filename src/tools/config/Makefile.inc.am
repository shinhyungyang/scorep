bin_PROGRAMS += scorep-config

scorep_config_SOURCES = $(SRC_ROOT)src/tools/config/scorep_config.cpp       \
                      $(SRC_ROOT)src/tools/config/scorep_config.hpp

scorep_config_CXXFLAGS = -DCXX=\""$(CXX)"\"

scorep_config_CPPFLAGS = $(AM_CPPFLAGS)    \
                         -I$(INC_DIR_UTIL) \
                         -I$(INC_ROOT)src/tools/config

scorep_config_LDADD = $(LIB_DIR_UTIL)libscorep_parser_tools.la \
		    $(LIB_DIR_UTIL)libscorep_utilities.la

BUILT_SOURCES += create-config-tool-headers

## Get the config tool values from the backend and mpi Makefiles
create-config-tool-headers:
	@$(am__cd) ../build-backend && $(MAKE) $(AM_MAKEFLAGS) $(CONFIG_HEADER_BACKEND)
	@$(am__cd) ../build-mpi     && $(MAKE) $(AM_MAKEFLAGS) $(CONFIG_HEADER_MPI)
